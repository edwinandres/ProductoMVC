@model IEnumerable<MiPrimerAppMVC.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

@* <button class="btn btn-success">@Html.ActionLink("Crear", "Create", null ,new { @class = "btn btn-success" })</button> *@

<form>
    <div class="form-group">
        <input type="button" value="Nuevo Registro" class="btn btn-success" onclick="window.location.href = '@Url.Action("Create", "Producto")'"/>
       
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>            
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.Activo)</th>
            <th>@Html.DisplayNameFor(model => model.FechaDeAlta)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>        
        @foreach (Producto producto in @Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => producto.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => producto.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => producto.Precio)</td>
                <td>@Html.DisplayFor(modelItem => producto.Activo)</td>
                <td>@Html.DisplayFor(modelItem => producto.FechaDeAlta)</td>
                <td>                    
                    @Html.ActionLink("Editar", "Edit", new { id = producto.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = producto.Id }, new { @class = "btn btn-danger" })

                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@producto.Id">Editar</a>
                    <a asp-action="Delete" asp-route-id="@producto.Id">Eliminar</a>
                </td>

            </tr>
        }  
    </tbody>
</table>