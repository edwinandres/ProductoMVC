@model MiPrimerAppMVC.Models.Producto

@{
    ViewData["Title"] ="Crear producto nuevo";
}
<div class="container">
    <p>@ViewBag.Message</p>
    <p>@ViewBag.ErrorMessage</p>
    <div class="row">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control"  />
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripci√≥n</label>
                <input asp-for="Descripcion" class="form-control"  />
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio</label>
                <input asp-for="Precio" class="form-control"  />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label ">
                <input asp-for="Activo" class="form-check-input"  />
                 @Html.DisplayNameFor(model => model.Activo)
                </label>            
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
               
            </div>


        </form>

    </div>
</div>